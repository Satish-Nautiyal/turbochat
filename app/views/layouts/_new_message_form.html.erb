<div class="form-group msg-form">
    <%= form_with(model: [@selected_room, @message], class: "d-flex", remote: true,
        data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |f|%>
        <%= f.text_field :body, class: "form-control mr-4", autocomplete: "off" %>
        <%= f.submit "Send", data: {disable_with: false}, class: "ml-6 btn btn-primary"  %>
    <% end %>
</div>